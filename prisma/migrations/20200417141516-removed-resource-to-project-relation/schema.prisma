datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          Int        @default(autoincrement()) @id
  name        String
  description String?
  tasks       Task[]
  resources   Resource[]
  completed   Boolean    @default(false)
}

model Task {
  id          Int     @default(autoincrement()) @id
  description String
  notes       String?
  project     Project @relation(fields: [projectId], references: [id])
  projectId   Int
  completed   Boolean @default(false)
}

model Resource {
  id          Int     @default(autoincrement()) @id
  name        String
  description String?
}